<Modal @ref="modal">
    <ModalContent Centered="true" Size="Size">
        <ModalHeader>
            <ModalTitle>@Title</ModalTitle>
            <CloseButton />
        </ModalHeader>
        <ModalBody Style="text-align: justify !important;" Padding="Padding.Is3">
            @ChildContent
        </ModalBody>
    </ModalContent>
</Modal>

@code {
    [Parameter] public string? Title { get; set; }
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public ModalSize Size { get; set; } = ModalSize.Default;

    private Modal? modal;

    public void ShowModal()
    {
        modal?.Show();
    }
}