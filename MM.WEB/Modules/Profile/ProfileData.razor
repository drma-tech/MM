                                             CssIcon="@IconsFA.Solid.Icon("smoking").Font" ShowHelper="false">
                                </FieldSelect>
                            </MudItem>
                            <MudItem xs="12">
                                <FieldSelect For="@(() => context.Diet)" TValue="Diet?" TEnum="Diet" @bind-SelectedValue="@context.Diet"
                                             CssIcon="@IconsFA.Solid.Icon("utensils").Font">
                                </FieldSelect>
                            </MudItem>
                            <MudItem xs="12">
                                <FieldSelect For="@(() => context.Religion)" TValue="Religion?" TEnum="Religion" @bind-SelectedValue="@context.Religion"
