                                <FieldSelect For="@(() => context.SexPersonalityPreference)" TValue="HashSet<SexPersonality>" TEnum="SexPersonality" @bind-SelectedValues="@context.SexPersonalityPreference"
                                             CssIcon="@IconsFA.Solid.Icon("heart-circle-check").Font" Multiple="true">
                                </FieldSelect>
                            </MudItem>
