                            <MudItem xs="12">
                                <FieldSelect For="@(() => context.SharedSpendingStyle)" TValue="SharedSpendingStyle?" TEnum="SharedSpendingStyle" @bind-SelectedValue="@context.SharedSpendingStyle"
