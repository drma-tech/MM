@inherits PageCore<ProfileData>

<NewRenderControl T="ProfileModel" Actions="Actions" Instance="Profile" ExpressionEmpty="(ProfileModel? obj) => obj == null"
                  PrivateFeature="true" IsAuthenticated="AppStateStatic.IsAuthenticated">
    <MudExpansionPanels Elevation="2" Class="mb-3">
        <MudExpansionPanel ExpandedChanged="(bool value) => VisibleChanged(value, Tabs.BASIC)" HeaderClass="mud-primary-text">
            <TitleContent>
                <div class="d-flex">
                    @if (IsValid(Tabs.BASIC))
                    {
                        <MudIcon Icon="@IconsFA.Solid.Icon("check").Font" Color="Color.Success" class="me-3"></MudIcon>
                    }
                    else
                    {
                        <MudIcon Icon="@IconsFA.Solid.Icon("triangle-exclamation").Font" Color="Color.Warning" class="me-3"></MudIcon>
                    }
                    <MudText Color="Color.Primary" Typo="Typo.button">@Section.Basic</MudText>
                </div>
            </TitleContent>
            <ChildContent>
                @if (Tab == Tabs.BASIC)
                {
                    <MudStack Row="true" Spacing="4" Breakpoint="Breakpoint.Xs">
                        <MudGrid Spacing="@Css.SpaceSmall">
                            <MudItem xs="12">
                                <FieldText For="@(() => context.NickName)" @bind-Value="@context.NickName" CssIcon="@IconsFA.Solid.Icon("user").Font"
                                           Required="true"></FieldText>
                            </MudItem>
                            <MudItem xs="12">
                                <FieldText For="@(() => context.Description)" @bind-Value="@context.Description" CssIcon="@IconsFA.Solid.Icon("quote-left").Font"
                                           Rows="8">
                                </FieldText>
                            </MudItem>
                            <MudItem xs="12">
                                <Country For="@(() => context.Nationality)" SelectedValue="@context.Nationality" SelectedValueChanged="CountryChanged"
                                         CssIcon="@IconsFA.Solid.Icon("earth-americas").Font" Required="true">
                                </Country>
                            </MudItem>
                            <MudItem xs="12">
                                <FieldSelect For="@(() => context.Languages)" TValue="HashSet<Language>" TEnum="Language" @bind-SelectedValues="@context.Languages"
                                             CssIcon="@IconsFA.Solid.Icon("language").Font" Required="true" Multiple="true" Order="@(o => o.Name)"
                                             ShowDataSelectDescription="false">
                                </FieldSelect>
                            </MudItem>
                        </MudGrid>
                        <MudGrid Spacing="@Css.SpaceSmall">
                             <MudItem xs="12">
                                <FieldText For="@(() => context.Location)" Value="@context.Location" CssIcon="@IconsFA.Solid.Icon("location-dot").Font" Required="true" ReadOnly="true"
                                           ButtomClicked="async () => { await SetLocation(context); }" ButtomCssIcon="@IconsFA.Solid.Icon("map-location-dot").Font"
                                           ButtomTitle="Retrieve GPS position">
                                </FieldText>
                            </MudItem>                           
                            <MudItem xs="12">
                                <FieldSelect For="@(() => context.MaritalStatus)" TValue="MaritalStatus?" TEnum="MaritalStatus" @bind-SelectedValue="@context.MaritalStatus"
                                             CssIcon="@IconsFA.Solid.Icon("ring").Font" Required="true">
                                </FieldSelect>
                            </MudItem>
                            <MudItem xs="12">
                                <FieldSelect For="@(() => context.BiologicalSex)" TValue="BiologicalSex?" TEnum="BiologicalSex" @bind-SelectedValue="@context.BiologicalSex"
                                             CssIcon="@IconsFA.Solid.Icon("person-half-dress").Font" Required="true">
                                </FieldSelect>
                            </MudItem>
                            <MudItem xs="12">
                                <FieldSelect For="@(() => context.GenderIdentities)" TValue="HashSet<GenderIdentity>" TEnum="GenderIdentity" @bind-SelectedValues="@context.GenderIdentities"
                                             CssIcon="@IconsFA.Solid.Icon("mars-and-venus").Font" Required="true" Multiple="true">
                                </FieldSelect>
                            </MudItem>
                            <MudItem xs="12">
                                <FieldSelect For="@(() => context.SexualOrientations)" TValue="HashSet<SexualOrientation>" TEnum="SexualOrientation" @bind-SelectedValues="@context.SexualOrientations"
                                             CssIcon="@IconsFA.Solid.Icon("heart-pulse").Font" Required="true" Multiple="true">
                                </FieldSelect>
                            </MudItem>
                        </MudGrid>
                    </MudStack>
                }
            </ChildContent>
        </MudExpansionPanel>
        <MudExpansionPanel ExpandedChanged="(bool value) => VisibleChanged(value, Tabs.BIO)" HeaderClass="mud-primary-text">
            <TitleContent>
                <div class="d-flex">
                    @if (IsValid(Tabs.BIO))
                    {
                        <MudIcon Icon="@IconsFA.Solid.Icon("check").Font" Color="Color.Success" class="me-3"></MudIcon>
                    }
                    else
                    {
                        <MudIcon Icon="@IconsFA.Solid.Icon("triangle-exclamation").Font" Color="Color.Warning" class="me-3"></MudIcon>
                    }
                    <MudText Color="Color.Primary" Typo="Typo.button">@Section.Bio</MudText>
                </div>
            </TitleContent>
            <ChildContent>
                @if (Tab == Tabs.BIO)
                {
                    <MudAlert Dense="true" Variant="Variant.Outlined" Severity="MudBlazor.Severity.Info" Class="mb-4">
                        @GlobalTranslations.ProfileDataBioTip1
                    </MudAlert>
                    <MudStack Row="true" Spacing="4" Breakpoint="Breakpoint.Xs" Class="mb-4">
                        <MudGrid Spacing="@Css.SpaceSmall">
                            <MudItem xs="12">
                                <FieldSelect For="@(() => context.Ethnicity)" TValue="Ethnicity?" TEnum="Ethnicity" @bind-SelectedValue="@context.Ethnicity"
                                             CssIcon="@IconsFA.Solid.Icon("globe").Font">
                                </FieldSelect>
                            </MudItem>
                            <MudItem xs="12">
                                <FieldSelect For="@(() => context.BodyType)" TValue="BodyType?" TEnum="BodyType" @bind-SelectedValue="@context.BodyType"
                                             CssIcon="@IconsFA.Solid.Icon("weight-scale").Font" ShowHelper="false">
                                </FieldSelect>
                            </MudItem>
                        </MudGrid>
                        <MudGrid Spacing="@Css.SpaceSmall">
                            <MudItem xs="12">
                                <Birthdate Type="Shared.Field.FieldType.Date" For="@(() => context.BirthDate)" @bind-Value="@context.BirthDate"
                                           CssIcon="@IconsFA.Solid.Icon("cake-candles").Font">
                                </Birthdate>
                            </MudItem>
                            <MudItem xs="12">
                                <FieldSelect For="@(() => context.Height)" TValue="Height?" TEnum="Height" @bind-SelectedValue="@context.Height"
                                             CssIcon="@IconsFA.Solid.Icon("ruler").Font" ShowHelper="false">
                                </FieldSelect>
                            </MudItem>
                        </MudGrid>
                    </MudStack>
                    <MudStack Spacing="0">
                        <MudButton Color="Color.Warning" Variant="Variant.Outlined" OnClick="@(() => { _BioExpanded = !_BioExpanded; })"
                                   EndIcon="@IconsFA.Solid.Icon("arrow-down").Font">
                            @CardHeader.ProfileOptionalSection
                        </MudButton>
                        <MudCollapse Expanded="_BioExpanded">
                            <MudAlert Dense="true" Variant="Variant.Outlined" Severity="MudBlazor.Severity.Info" Class="my-4">
                                @GlobalTranslations.ProfileDataBioTip2
                            </MudAlert>
                            <MudGrid Spacing="@Css.SpaceSmall">
                                <MudItem xs="12" sm="6">
                                    <FieldSelect For="@(() => context.Neurodiversity)" TValue="Neurodiversity?" TEnum="Neurodiversity" @bind-SelectedValue="@context.Neurodiversity"
                                                 CssIcon="@IconsFA.Solid.Icon("brain").Font">
                                    </FieldSelect>
                                </MudItem>
                                <MudItem xs="12" sm="6">
                                    <FieldSelect For="@(() => context.Disabilities)" TValue="HashSet<Disability>" TEnum="Disability" @bind-SelectedValues="@context.Disabilities"
                                                 CssIcon="@IconsFA.Solid.Icon("wheelchair").Font" Multiple="true">
                                    </FieldSelect>
                                </MudItem>
                            </MudGrid>
                        </MudCollapse>
                    </MudStack>
                }
            </ChildContent>
        </MudExpansionPanel>
        <MudExpansionPanel ExpandedChanged="(bool value) => VisibleChanged(value, Tabs.LIFESTYLE)" HeaderClass="mud-primary-text">
            <TitleContent>
                <div class="d-flex">
