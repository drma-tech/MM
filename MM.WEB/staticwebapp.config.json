{
  "routes": [
    {
      "route": "/api/public/*",
      "allowedRoles": [ "anonymous" ]
    },
    {
      "route": "/api/adm/*",
      "allowedRoles": [ "administrator" ]
    },
    {
      "route": "/api/*",
      "allowedRoles": [ "authenticated" ]
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": [ "*.{css,scss,js,png,gif,ico,jpg,svg}" ]
  }
}